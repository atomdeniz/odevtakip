@model List<OdevTakip.Data.Model.Lesson>
@{
    Layout = "";
}
<div class="row">
    <div class="col-md-12">

        <div class="card">
            <div class="card-header">

                <strong>Dersler</strong>
            </div>
            <div class="card-body" data-toggle="match-height" style="">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Ders Adı</th>
                            <th>Ödev Listele</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@item.Name</td>
                            <td><a href="/Student/ListHomeworksForStudent?id=@item.Id"><span class="icon icon-list"></span></a></td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
